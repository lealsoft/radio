<script type="text/javascript">
function $(id){return document.getElementById(id);}
function pad(num){return(num<10?'0':'')+num;}
var i=661;
function time(t,slim){
var min=parseInt(t/60);
var sec=t-parseInt(min*60);
var hours=parseInt(min/60);
min-=parseInt(hours*60);
var r="";
var days=parseInt(hours/24);
hours-=parseInt(days*24);
var weeks=parseInt(days/7);
days-=parseInt(weeks*7);
var years=parseInt(weeks/52);
weeks-=parseInt(years*52);
if(years)r+=years+" year"+(years!=1?"s":"")+" ";
if(weeks)r+=weeks+" week"+(weeks!=1?"s":"")+" ";
if(days)r+=days+" day"+(days!=1?"s":"")+" ";
if(slim){
r+=pad(hours)+":"+pad(min)+":"+pad(sec);
}else{
if(hours)r+=hours+" hour"+(hours!=1?"s":"")+" ";
if(min)r+=min+" minute"+(min!=1?"s":"")+" ";
if(sec)r+=sec+" second"+(sec!=1?"s":"");
}
return r;
}
function count(){i++;$('up').innerHTML="Daemon Uptime: "+(!i?"Starting&hellip;":time(i,1));}
count();setInterval(count,1000);
</script>

